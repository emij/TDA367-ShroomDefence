<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://
www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://niftygui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    
    <useStyles filename="nifty-default-styles.xml" />
    <useControls filename="nifty-default-controls.xml" />
    
    <screen id="start" controller="se.chalmers.tda367.std.gui.GameplayOverlay">
        <layer id="rightUI" childLayout="center" visibleToMouse="true">
            <panel height="100%" width="21%" align="right" valign="center" backgroundColor="#444444"
                childLayout="vertical">
                <panel childLayout="vertical" width="95%" height="80%" align="center" valing="top" backgroundColor="#575757">
                    <panel childLayout="horizontal" align="center" padding="80px,20px">
                        <control id="basicTowerButton" type="button" name="basicTowerButton" width="45%">
                            <interact onClick="buildTower(basic)" />
                        </control>
                        <control id="areaTowerButton" type="button" name="areaTowerButton" width="45%">
                            <interact onClick="buildTower(area)" />
                        </control>
                    </panel>
                    <panel childLayout="horizontal" align="center" padding="80px,20px">
                        <control id="slowTowerButton" type="button" name="slowTowerButton" width="45%">
                            <interact onClick="buildTower(slow)" />
                        </control>
                        <control id="posionTowerButton" type="button" name="posionTowerButton" width="45%">
                            <interact onClick="buildTower(poison)" />
                        </control>
                    </panel>
                </panel>
                <panel childLayout="vertical" label="Start wave!" height="*" align="center" valing="bottom">
                    <control id="startWaveButton" type="button" name="startWave" width="200px" valign="center">
                        <interact onClick="startWave()" />
                    </control>
                </panel>
            </panel>
        </layer>
        <layer id="bottomUI" childLayout="center">
            <panel height="10%" width="100%" align="center" valign="bottom" backgroundColor="#444444"
                childLayout="center" visibleToMouse="true">
                <text font="verdana-24-shadow.fnt" text="TEST"/>
            </panel>
        </layer>
    </screen>
</nifty>
